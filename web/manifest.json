{
  "manifest_version": 3,
  "name": "DeMlavertiser",
  "version": "1.0",
  "description": "A tool for detecting adware.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "48": "icons/favicon-32x32.png",
      "128": "icons/Icon-192.png"
    }
  },
  "icons": {
    "16": "icons/favicon-16x16.png",
    "48": "icons/favicon-32x32.png",
    "128": "icons/Icon-192.png"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/"
  ]
}

